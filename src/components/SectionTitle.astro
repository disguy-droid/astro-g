---
export interface Props {
  sectionTitle: string;
}

const { sectionTitle } = Astro.props;
---

<div class="flex items-center justify-between">
  <h3 class="text-2xl font-semibold md:text-3xl">{sectionTitle}</h3>
  <a
    href={sectionTitle === "Mountains" ? `/mountains` : `/planets`}
    class="group flex items-center space-x-1 text-sm md:text-base"
    ><span>Show all</span>
    <svg
      xmlns="http://www.w3.org/2000/svg"
      fill="none"
      viewBox="0 0 24 24"
      stroke-width="1.5"
      stroke="currentColor"
      class="h-4 w-4 transition group-hover:translate-x-1 md:h-5 md:w-5"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        d="M8.25 4.5l7.5 7.5-7.5 7.5"
      ></path>
    </svg>
  </a>
</div>
