---
import type { Mountains } from "../../interfaces/interfaces";
import Layout from "../../layouts/Layout.astro";

type Slug = {
  slug: NonNullable<string>;
};

let mountain = {} as Mountains;

const { slug } = Astro.params as Slug;
const capitalize = slug.charAt(0).toUpperCase() + slug;

try {
  const response = await fetch("https://api.nuxtjs.dev/mountains");
  const data = (await response.json()) as unknown as Mountains[];

  data.filter((dt) => {
    if (dt.slug === slug) mountain = dt;
  });

  // mountain = data;
} catch (e) {
  console.error(e);
}

const { title, image, description, height, continent, countries } = mountain;
---

<Layout title={title}>
  <main class="min-h-screen">
    <a href="/">Back</a>
    <img
      src={image}
      alt={`${title}`}
      class="mt-8 aspect-video w-full rounded"
    />

    <div class="mt-10">
      <h2 class="text-2xl font-semibold md:text-3xl">{title}</h2>
      <p class="mt-4 text-sm text-gray-700 md:text-base">{description}</p>
    </div>
    <div class="mt-4 space-y-1">
      <p class="text-gray-700">Height: {height}</p>
      <p class="text-gray-700">
        Countries: {countries.join(", ")}
      </p>
      <p class="text-gray-700">Continent: {continent}</p>
    </div>
  </main>
</Layout>
